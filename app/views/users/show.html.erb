<div class="position-relative">
  <p> Welcome back, <%= current_user.username %> ðŸ‘‹</p>
  <div class="position-absolute top-0 end-0">
  <% if user_signed_in? %>
  <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "btn btn-outline-secondary", role: "button" %>
  <% else %>
  <%= link_to "Log in", new_user_session_path, class: "btn btn-outline-primary", role: "button" %>
  <% end %>
  </div>

  <div class="form-check form-switch">
    <%= form_with url: toggle_visibility_user_path, method: :patch, local: true do %>
      <%= check_box_tag 'user[visibility]', '1', current_user.visibility, class: 'form-check-input', onchange: 'this.form.submit();' %>
      <%= label_tag 'user[visibility]', 'Profile visibility', class: 'form-check-label' %>
    <% end %>
  </div>
</div>