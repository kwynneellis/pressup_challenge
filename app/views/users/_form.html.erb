<%= form_with(model: @user, local: true) do |form| %>
  <div class="field">
    <%= form.label :username %><br />
    <%= form.text_field :username %>
  </div>

  <div class="field">
    <%= form.label :start_date, "Start of challenge" %><br />
    <%= form.date_field :start_date %>
  </div>

  <div class="actions">
    <%= form.submit 'Save' %>
  </div>
<% end %>