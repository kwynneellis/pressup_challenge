<h1>Challenges</h1> 
<% if @public_challenges.empty? %>
  <p>We're sorry, there are no public challenges to join.</p>
  <%= link_to 'Create a challenge', new_challenge_path, class: "btn btn-primary" %>
<% else %>
  <% @public_challenges.each do |challenge| %>
    <div class="card">
      <div class="card-header d-flex justify-content-between">
        <%= link_to challenge.name.titleize, challenge_path(challenge), class: "btn px-0 text-decoration-none text-reset" %>
        <%= button_to 'Join', join_challenge_path(challenge), method: :post, class: "btn btn-primary" %>
      </div>
      <div class="card-body">
        <p>Started on: <%= challenge.start_date.strftime("%d %b %Y") %></p>
        <p>Creator: <%= challenge.creator.username %></p>
      </div>
    </div>
  <% end %>
<% end %>