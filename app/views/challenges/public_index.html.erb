<div class="d-flex justify-content-between mb-2">
<h1>Challenges</h1>
<%= link_to "Create", new_challenge_path, class: "btn btn-primary mx-1" %>
</div>
<% if @public_challenges.empty? %>
  <p>There are currently no public challenges to join.</p>
<% else %>
  <% @public_challenges.each do |challenge| %>
    <div class="card mb-2">
      <div class="card-header d-flex justify-content-between">
        <%= link_to challenge.name.titleize, challenge_path(challenge), class: "btn px-0 text-decoration-none text-reset" %>
        <%= button_to 'Join', join_challenge_path(challenge), method: :post, class: "btn btn-secondary" %>
      </div>
      <div class="card-body">
        <p>Started on: <%= challenge.start_date.strftime("%d %b %Y") %></p>
        <p>Creator: <%= challenge.creator.username %></p>
      </div>
    </div>
  <% end %>
<% end %>