<div class="bubble-container p-1">
  <div class="scroll-header d-flex justify-content-between">
    <small class="scroll-item m-0"><%= @date.strftime("%B") %></small>
    <a href="<%= day_challenge_path(@challenge, date: Date.today) %>" class="scroll-item small border-bottom m-0">Today</a>
  </div>
  <div class="scroll-navbar p-1 mb-0" data-controller="navbar-scroll" data-navbar-scroll-target="container">
    <% (@challenge.start_date..@challenge.end_date).each do |date| %>
      <a href="<%= day_challenge_path(@challenge, date: date) %>" 
        class="scroll-item rounded-top <%= 'active bg-light bg-gradient' if date == @date %> <%= 'today' if date == Date.today %>"
        <%= 'data-navbar-scroll-target=activeItem' if date == @date %>
        data-action="click->navbar-scroll#setActiveItem">
        <small class="weekday"><%= date.strftime("%a") %></small><br>
        <span class="day"><%= date.strftime("%d") %></span>
      </a>
    <% end %>
  </div>
</div>